@model  IEnumerable<ProyectoOrderTwoGo.Models.Empresa>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["Rol"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {
        if (int.Parse(Session["Rol"].ToString()) != 1)
        {
            Response.Redirect("~/Home/Index");
        }
    }

}
<section>
    @if (TempData["mensaje"] != null)
    {
        <section class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" date-dismiss="alert" arial-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </section>
    }
    <article class="container">
        <article class="row">
            <section class="offset-3">
                <h4>Lista de Empresas</h4>
            </section>
            <section class="col-md-4">
                <a href="~/Empresas/Empresas" class="btn btn-block btn-primary">Registrar Empresa</a>
                <br />
            </section>
     
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.idEmpresa)</td>
                            <td>@Html.DisplayNameFor(m => m.nameEmpresa)</td>
                            <td>Editar</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.idEmpresa</td>
                                <td>@i.nameEmpresa</td>
                                <td>
                                    @Html.ActionLink("Editar", "Editar", new { id = i.idEmpresa }, new { @class = "btn btn-block btn-warning" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="offset-5">No existe nada papá</p>
            }
        </article>
    </article>
</section>