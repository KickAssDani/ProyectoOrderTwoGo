@model IEnumerable<ProyectoOrderTwoGo.Models.Productos>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    @if (TempData["mensaje"] != null)
    {
        <section class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" date-dismiss="alert" arial-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </section>
    }
    <article class="row">
        <section class="col-sm-6">
            <h2>Lista de Productos</h2>
        </section>
        <section class="col-sm-6">
            <a href="~/Productos/AgregarProductos" class="btn btn-success d-block">Agregar Productos</a>
        </section>
    </article>
    <article class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.idProduct)</td>
                        <td>@Html.DisplayNameFor(m => m.ProductNam)</td>
                        <td>@Html.DisplayNameFor(m => m.precio)</td>
                        <td>Editar</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.idProduct</td>
                            <td>@i.ProductNam</td>
                            <td>@i.precio</td>
                            <td>@Html.ActionLink("Editar", "EditarProducto", new { id = i.idProduct })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="offset-5">No existe nada papá</p>
        }
    </article>
</section>