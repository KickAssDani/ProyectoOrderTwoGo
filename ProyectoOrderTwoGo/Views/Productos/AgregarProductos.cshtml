@model ProyectoOrderTwoGo.Models.Productos
@{
    ViewBag.Title = "AgregarProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="row">
    <article class="col-md-4 offset-md-4">
        <section class="card">
            <article class="offset-md-1">
                @using (Html.BeginForm("AgregarProductosAdmi", "Productos", FormMethod.Post, new { @class = "form-group" }))
                {
                    @Html.HiddenFor(m => m.idProduct)
                    <section>
                        @Html.LabelFor(m => m.ProductNam)
                        @Html.EditorFor(m => m.ProductNam, new { htmlAttributes = new { @class = "form-control" } })

                    </section>
                    <section>
                        @Html.LabelFor(m => m.precio)
                        @Html.EditorFor(m => m.precio, new { htmlAttributes = new { @class = "form-control" } })
                    </section>
                    <section>
                        @Html.LabelFor(m => m.idEmpresa)
                        @Html.DropDownListFor(x => x.idEmpresa, (SelectList)ViewBag.Empresa, new { @class = "form-control" })
                    </section>
                    <br />
                    <section class="">
                        <input type="submit" class="btn btn-block btn-primary" name="nam" value="Agregar">
                    </section>
                }
            </article>
        </section>
    </article>
</section>




