@model ProyectoOrderTwoGo.Models.Productos
@{
    ViewBag.Title = "AgregarProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article class="container">
    <article class="row">
        <section class="card col-md-8 offset-md-2 col-sm-10">
            <section class="card-header">
                <h4>Lista de Empresas</h4>
            </section>
            <section class="card-body col-md-12">
                @using (Html.BeginForm("AgregarProductosAdmi", "Productos", FormMethod.Post, new { enctype = "multipart/form-data", htmlAttributes = new { @class = "form-control" } }))
                {
                    @Html.HiddenFor(m => m.idProduct)
                    <section>
                        @Html.LabelFor(m => m.ProductNam)
                        @Html.EditorFor(m => m.ProductNam, new { htmlAttributes = new { @class = "col-md-12 form-control" } })

                    </section>
                    <section>
                        @Html.LabelFor(m => m.precio)
                        @Html.EditorFor(m => m.precio, new { htmlAttributes = new { @class = "col-md-12 form-control" } })
                    </section>
                    <section>
                        @Html.LabelFor(m => m.idEmpresa)
                        @Html.DropDownListFor(x => x.idEmpresa, (SelectList)ViewBag.Empresa, new { @class = "col-md-12 form-control" })
                    </section>
                    <section>
                        @Html.LabelFor(m => m.stock)
                        @Html.EditorFor(m => m.stock, new { htmlAttributes = new { @class = " col-md-12 form-control" } })
                    </section>
                    <section>
                        @Html.LabelFor(m => m.stock)
                        <input type="file" name="Imagen" required />
                    </section>
                    <section style="color:red" class="row">@Html.ValidationMessageFor(m => m.ProductNam)</section>
                    <section style="color:red" class="row">@Html.ValidationMessageFor(m => m.precio)</section>
                    <section style="color:red" class="row">@Html.ValidationMessageFor(m => m.idEmpresa)</section>
                    <br />
                    <section class="">
                        <input type="submit" class="btn btn-block btn-primary col-md-12" name="nam" value="Agregar Empresa">
                    </section>
                }
            </section>
        </section>
    </article>
</article>
